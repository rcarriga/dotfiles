{
  "coc": {
    "preferences": {
      "formatOnSaveFiletypes": [
        "typescript",
        "javascript",
        "typescriptreact",
        "javascriptreact",
        "vue",
        "python"
      ]
    }
  },
  "codeLens": {
    "enable": false
  },
  "diagnostic": {
    "checkCurrentLine": true,
    "virtualTextLines": 4
  },
  "eslint": {
    "autoFixOnSave": true,
    "filetypes": [
      "javascript",
      "javascriptreact",
      "typescript",
      "typescriptreact",
      "vue"
    ]
  },
  "explorer": {
    "file": {
      "child": {
        "template": "[selection | clip | 1] [indent][icon | 1] [diagnosticError & 1][filename omitCenter 1][readonly][git] [linkIcon & 1][link]"
      },
      "column": {
        "filename": {
          "paddingEnd": false
        },
        "git": {
          "icon": {
            "modified": "â›¥"
          }
        }
      },
      "columns": [
        "clip",
        "diagnosticWarning",
        "diagnosticError",
        "indent",
        "icon",
        "filename",
        "git",
        "selection"
      ]
    },
    "icon": {
      "enableNerdfont": true
    }
  },
  "javascript": {
    "suggestionActions": {
      "enabled": false
    },
    "format": {
      "enabled": false
    }
  },
  "git": {
    "enableGutters": false
  },
  "languageserver": {
    "haskell": {
      "command": "hie-wrapper",
      "args": ["--lsp"],
      "rootPatterns": [
        "*.cabal",
        "stack.yaml",
        "cabal.project",
        "package.yaml"
      ],
      "filetypes": ["hs", "lhs", "haskell"],
      "initializationOptions": {
        "languageServerHaskell": {}
      }
    }
  },
  "latex": {
    "forwardSearch": {
      "args": ["--synctex-forward", "%l:1:%f", "%p"],
      "executable": "zathura"
    }
  },
  "list": {
    "source": {
      "buffers": {
        "defaultOptions": ["--normal"]
      },
      "colors": {
        "defaultOptions": ["--auto-preview"]
      },
      "commits": {
        "defaultOptions": ["--normal"]
      },
      "files": {
        "args": [
          "--files",
          "--max-depth=10",
          "--hidden",
          "--color",
          "never",
          "--follow"
        ],
        "command": "rg",
        "defaultOptions": ["--ignore-case", "--no-sort"]
      },
      "grep": {
        "args": [
          "--max-depth=10",
          "--hidden",
          "--no-heading",
          "--color",
          "always",
          "--follow"
        ],
        "command": "rg",
        "defaultOptions": [
          "--ignore-case",
          "--interactive",
          "--auto-preview",
          "--no-sort"
        ]
      },
      "helptags": {
        "defaultOptions": ["--ignore-case", "--auto-preview"]
      },
      "sessions": {
        "defaultOptions": ["--normal"]
      },
      "words": {
        "defaultOptions": ["--ignore-case", "--interactive"]
      },
      "yank": {
        "defaultOptions": ["--normal"]
      }
    }
  },
  "pyls": {
    "plugins": {
      "pycodestyle": {
        "enabled": false
      }
    }
  },
  "python": {
    "formatting": {
      "provider": "black"
    },
    "jediEnabled": true,
    "linting": {
      "mypyEnabled": true,
      "pydocstyleEnabled": false
    }
  },
  "suggest": {
    "enablePreview": true,
    "noselect": true,
    "preferCompleteThanJumpPlaceholder": true
  },
  "tsserver": {
    "implicitProjectConfig": {
      "checkJs": true
    },
    "npm": "/usr/local/bin/npm"
  },
  "yank": {
    "priority": 40
  },
  "vetur": {
    "experimental": {
      "templateInterpolationService": true
    },
    "format": {
        "enable": false
    }
  },
  "emmet": {
    "priority": 100
  },
  "typescript": {
    "format": {
      "enabled": false
    }
  }
}
