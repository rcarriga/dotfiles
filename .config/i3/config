bar {
        status_command i3blocks
}
# Pulse Audio controls
bindsym XF86AudioRaiseVolume exec --no-startup-id bash ~/dotfiles/scripts/volume UP #increase sound volume
bindsym XF86AudioLowerVolume exec --no-startup-id bash ~/dotfiles/scripts/volume DOWN #decrease sound volume
bindsym XF86AudioMute exec --no-startup-id bash ~/dotfiles/scripts/volume MUTE

# Sreen brightness controls
bindsym XF86MonBrightnessUp exec bash ~/dotfiles/scripts/brightness UP
bindsym XF86MonBrightnessDown exec bash ~/dotfiles/scripts/brightness DOWN

# Media player controls
bindsym XF86AudioPlay exec playerctl play
bindsym XF86AudioPause exec playerctl pause
bindsym XF86AudioNext exec playerctl next
bindsym XF86AudioPrev exec playerctl previous

bindsym $mod+shift+t exec i3lock

# Enable tap to click on touchpad
exec --no-startup-id xinput set-prop "DLL07BE:01 06CB:7A13 Touchpad" "libinput Tapping Enabled" 1
exec --no-startup-id xinput set-prop "DLL07BE:01 06CB:7A13 Touchpad" "libinput Natural Scrolling Enabled" 1
exec --no-startup-id xset r rate 150 40
exec --no-startup-id redshift -l 53:-6 -t 6500:3000
exec --no-startup-id firefox
exec --no-startup-id kitty
exec --no-startup-id nm-applet
exec --no-startup-id light -N 1
exec --no-startup-id compton 
