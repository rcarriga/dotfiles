{
    "languageserver": {
        "kotlin": {
            "command": "~/kotlin-language-server/server/build/scripts/kotlin-language-server",
            "filetypes": [
                "kotlin"
            ]
        },
        "clangd": {
            "command": "clangd",
            "rootPatterns": [
                "compile_flags.txt",
                "compile_commands.json",
                ".vim/",
                ".git/",
                ".hg/"
            ],
            "filetypes": [
                "c",
                "cpp",
                "objc",
                "objcpp"
            ]
        },
        "haskell": {
            "command": "hie-wrapper",
            "rootPatterns": [
                ".stack.yaml",
                "cabal.config",
                "package.yaml"
            ],
            "filetypes": [
                "hs",
                "lhs",
                "haskell"
            ],
            "initializationOptions": {
                "languageServerHaskell": {}
            },
        },
        "purescript": {
            "command": "purescript-language-server",
            "args": [
                "--stdio"
            ],
            "filetypes": [
                "purescript"
            ],
            "rootPatterns": [
                "bower.json",
                "psc-package.json",
                "spago.dhall"
            ]
        }
    },
    "tslint.jsEnable": true,
    "tslint.enable": true,
    "tsserver.npm": "/usr/local/bin/npm",
    "tsserver.log": "verbose",
    "git.enableGutters": true,
    "git.addGlameToBufferVar": true,
    "git.addGlameToVirtualText": true,
    "python.linting.pydocstyleEnabled": false,
    "python.linting.mypyEnabled": true,
    "python.jediEnabled": true,
    "pyls.plugins.pycodestyle.enabled": false,
    "python.formatting.provider": "yapf",
    "codeLens.enable": true,
    "diagnostic.checkCurrentLine": true,
    "diagnostic.virtualTextLines": 4,
    "suggest.noselect": true,
    "suggest.enablePreview": true,
    "list.source.files.command": "rg",
    "list.source.files.args": ["--files"],
    "list.source.grep.command": "rg",
    "list.source.grep.args": ["--max-depth=10", "--hidden", "--color", "always", "--follow"],
    "list.source.files.defaultOptions": [
        "--ignore-case",
        "--no-sort"
    ],
    "list.source.grep.defaultOptions": [
        "--ignore-case",
        "--interactive",
        "--auto-preview",
        "--no-sort"
    ],
    "list.source.helptags.defaultOptions": [
        "--ignore-case",
        "--auto-preview"
    ],
    "list.source.words.defaultOptions": [
        "--ignore-case",
        "--interactive"
    ],
    "list.source.buffers.defaultOptions": [
        "--normal"
    ],
    "list.source.commits.defaultOptions": [
        "--normal"
    ],
    "list.source.yank.defaultOptions": [
        "--normal"
    ],
    "list.source.sessions.defaultOptions": [
        "--normal"
    ],
    "list.source.colors.defaultOptions": [
        "--auto-preview"
    ],
    "suggest.preferCompleteThanJumpPlaceholder": true,
    "tabnine.priority": 50,
    "yank.priority": 40,
    "explorer.icon.enableNerdfont": true,
    "explorer.file.columns": [
        "git",
        "selection",
        "clip",
        "diagnosticWarning",
        "diagnosticError",
        "indent",
        "icon",
        "filename"
    ],
    "latex.forwardSearch.executable": "zathura",
    "latex.forwardSearch.args": ["--synctex-forward", "%l:1:%f", "%p"]
}
